<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.work.dao.UserDao">

    <resultMap id="userDao" type="com.work.model.User">
        <id property="id" column="id"/>
        <result property="username" column="username" />
        <result property="password" column="password" />
        <result property="phone" column="phone" />
        <result property="credit" column="credit" />
        <result property="isBlasklist" column="is_blasklist" />
        <result property="createTime" column="create_time" />
        <result property="lastLoginTime" column="last_login_time" />
        <collection property="roles" ofType="com.work.model.Role">
            <id property="id" column="id" />
            <result property="name" column="name" />
            <collection property="permissions" ofType="com.work.model.Permission">
                <id property="id" column="id" />
                <result property="name" column="name"/>
                <result property="url" column="url" />
            </collection>
        </collection>
    </resultMap>


    <select id="findByUsername" parameterType="string" resultMap="userDao">
        SELECT u.*, r.*, p.*
        FROM user u
        INNER JOIN user_role ur on ur.uid = u.id
        INNER JOIN role r on r.id = ur.rid
        INNER JOIN permission_role pr on pr.rid = r.id
        INNER JOIN permission p on pr.pid = p.id
        WHERE u.username = #{username}
    </select>

    <select id="findIdByUsername" parameterType="string" resultType="java.lang.Integer">
        SELECT u.id
        FROM user u
        INNER JOIN user_role ur on ur.uid = u.id
        INNER JOIN role r on r.id = ur.rid
        INNER JOIN permission_role pr on pr.rid = r.id
        INNER JOIN permission p on pr.pid = p.id
        WHERE u.username = #{username}
    </select>

    <select id="findByRolename" parameterType="string" resultMap="userDao">
        SELECT u.*, r.*, p.*
        FROM user u
        INNER JOIN user_role ur on ur.uid = u.id
        INNER JOIN role r on r.id = ur.rid
        INNER JOIN permission_role pr on pr.rid = r.id
        INNER JOIN permission p on pr.pid = p.id
        WHERE r.name = #{name}
    </select>

    <insert id="addUser" parameterType="User" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        INSERT INTO user
        (id_card,username,PASSWORD,phone,address,credit,is_blacklist)
		values
		(#{idCard},#{username},#{password},#{phone},#{address},${credit},${isBlasklist})
    </insert>

    <insert id="addUserRole">
        INSERT INTO user_role values (#{user.id},#{role.id})
    </insert>

</mapper>